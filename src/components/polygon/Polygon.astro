---
import styles from './styles.module.scss';
---

<svg
  id='root'
  class={styles.root}
  version='1.2'
  xmlns='http://www.w3.org/2000/svg'
  xmlns:xlink='http://www.w3.org/1999/xlink'
  width=100%
  height=100%
>
  <defs>
    <circle
      id='point-handle'
      r='6'
      x='0'
      y='0'
      stroke-width='4'
      fill='#fff'
      fill-opacity='0.4'
      stroke='#fff' />
  </defs>

  <polygon
  id='rectBottom'
  stroke='#000'
  stroke-width='1'
  stroke-linejoin='round'
  fill='rgb(104, 232, 0)'
  points='100,300 80,280 180,280 200,300' />

  <polygon
    id='rectBack'
    stroke='#000'
    stroke-width='1'
    stroke-linejoin='round'
    fill='rgb(104, 232, 0)'
    points='80,80 80,280 180,280 180,80' />

  <polygon
    id='rectRight'
    stroke='#000'
    stroke-width='1'
    stroke-linejoin='round'
    fill='rgb(104, 232, 0)'
    points='200,300 200,100 180,80 180,280' />

  <polygon
    id='rectLeft'
    stroke='#000'
    stroke-width='1'
    stroke-linejoin='round'
    fill='rgb(104, 232, 0)'
    points='100,300 100,100 80,80 80,280' />

  <polygon
    id='rectTop'
    stroke='#000'
    stroke-width='1'
    stroke-linejoin='round'
    fill='rgb(124, 252, 0)'
    points='80,80 100,100 200,100 180,80' />

  <polygon
    id='rectFront'
    stroke='#000'
    stroke-width='1'
    stroke-linejoin='round'
    fill='rgb(114, 242, 0)'
    points='100,300 100,100 200,100 200,300' />
</svg>

<script src='./script.ts' />
